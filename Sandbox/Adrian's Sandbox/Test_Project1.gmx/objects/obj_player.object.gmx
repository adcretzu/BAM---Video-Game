    // Move as close as possible to the wall as possible, without hitting it
    while(!place_meeting(x+sign(hsp),y,obj_wall)) {
        x += sign(hsp);
    }
    // Stop move b/c we are right next to the wall.
    hsp = 0;
}
// Apply speed changes to object
x += hsp;

// Vertical Collision
if (place_meeting(x, y+vsp, obj_wall)) {
    // Move as close as possible to the wall as possible, without hitting it
    while(!place_meeting(x,y+sign(vsp),obj_wall)) {
        y += sign(vsp);
    }
    // Stop move b/c we are right next to the wall.
    vsp = 0;
}

// Apply speed changes to object
y += vsp;

// Determine facing
if(move &gt; 0) {
    image_xscale = 1;
}
else if( move &lt; 0) {
    image_xscale = -1;
}
